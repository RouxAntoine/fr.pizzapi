{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "lib": ["es5", "es2015.promise", "dom", "es7"],
    "sourceMap": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "outDir": "./dist/"
  },
  "files": [
    "./typings/json.d.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist/",
    "**/*.d.ts",
    "**.config.js"
  ]
}